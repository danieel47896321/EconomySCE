<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TabLayout_Appearance" parent="TextAppearance.Design.Tab">
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">26sp</item>
    </style>
    <style name="TabLayout_Style" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorHeight">3dp</item>
        <item name="android:background">@color/white</item>
        <item name="tabTextColor">@color/default_color</item>
        <item name="tabSelectedTextColor">@color/blue2</item>
        <item name="tabTextAppearance">@color/blue2</item>
        <item name="tabIndicatorColor">@color/blue2</item>
    </style>
    <style name="CardView_Style" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_marginLeft">11dp</item>
        <item name="android:layout_marginRight">11dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="cardCornerRadius">10dp</item>
    </style>
    <style name="TextView_Style" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/default_color</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingTop">2dp</item>
    </style>
    <style name="TextView_Style_Header" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:padding">10dp</item>
    </style>
</resources>
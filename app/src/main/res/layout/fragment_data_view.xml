<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="7dp"
        app:cardCornerRadius="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/fragmentUserLastName"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text=", שם משפחה: "
                android:textColor="@color/default_color"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/fragmentUserName"
                app:layout_constraintEnd_toStartOf="@+id/fragmentUserName"
                app:layout_constraintTop_toTopOf="@+id/fragmentUserName"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/fragmentUserGender"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text=", מין: "
                android:textColor="@color/default_color"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/fragmentUserLastName"
                app:layout_constraintEnd_toStartOf="@+id/fragmentUserLastName"
                app:layout_constraintTop_toTopOf="@+id/fragmentUserLastName"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/fragmentUserBirthDay"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="2dp"
                android:text="תאריך לידה: "
                android:textColor="@color/default_color"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/fragmentUserId"
                app:layout_constraintTop_toBottomOf="@+id/fragmentUserId" />

            <TextView
                android:id="@+id/fragmentUserStartWork"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="2dp"
                android:text="תאריך תחילת עבודה: "
                android:textColor="@color/default_color"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/fragmentUserBirthDay"
                app:layout_constraintTop_toBottomOf="@+id/fragmentUserBirthDay" />

            <TextView
                android:id="@+id/fragmentUserSalary"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="2dp"
                android:text="שכר: "
                android:textColor="@color/default_color"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/fragmentUserStartWork"
                app:layout_constraintTop_toBottomOf="@+id/fragmentUserStartWork" />

            <TextView
                android:id="@+id/fragmentUserVetek"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="2dp"
                android:text="ותק: "
                android:textColor="@color/default_color"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/fragmentUserSalary"
                app:layout_constraintTop_toBottomOf="@+id/fragmentUserSalary" />

            <TextView
                android:id="@+id/fragmentUserSection14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="תאריך קבלת סעיף 14: "
                android:textColor="@color/default_color"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/fragmentUserVetek"
                app:layout_constraintTop_toBottomOf="@+id/fragmentUserVetek" />

            <TextView
                android:id="@+id/fragmentUserPercent"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="2dp"
                android:text="אחוז סעיף 14: "
                android:textColor="@color/default_color"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/fragmentUserSection14"
                app:layout_constraintTop_toBottomOf="@+id/fragmentUserSection14" />

            <TextView
                android:id="@+id/fragmentUserAssetValue"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="2dp"
                android:text="שווי נכס: "
                android:textColor="@color/default_color"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/fragmentUserPercent"
                app:layout_constraintTop_toBottomOf="@+id/fragmentUserPercent" />

            <TextView
                android:id="@+id/fragmentUserLeftDate"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="2dp"
                android:text="תאריך עזיבה: "
                android:textColor="@color/default_color"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/fragmentUserAssetValue"
                app:layout_constraintTop_toBottomOf="@+id/fragmentUserAssetValue" />

            <TextView
                android:id="@+id/fragmentUserLeftReason"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="תאריך עזיבה: "
                android:textColor="@color/default_color"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/fragmentUserLeftDate"
                app:layout_constraintTop_toBottomOf="@+id/fragmentUserLeftDate" />

            <TextView
                android:id="@+id/fragmentUserId"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:text="ID"
                android:textColor="@color/default_color"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/fragmentUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="2dp"
                android:text="שם: "
                android:textColor="@color/default_color"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/fragmentUserId"
                app:layout_constraintEnd_toStartOf="@+id/fragmentUserId"
                app:layout_constraintTop_toTopOf="@+id/fragmentUserId" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>